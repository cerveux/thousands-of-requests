{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            {
                "code": 125
            }
        ],
		"require-jsdoc":"off",
		"no-unused-vars": "off",
		"new-cap": "off",
		"no-tabs": "off",
        "no-trailing-spaces": "warn",
        "object-curly-spacing": ["error", "always"],
        "space-before-function-paren": ["error", "always"],
        "space-in-parens": ["error", "always"],
        "camelcase": "off",
        "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
}
